container-width = 840px
overlay-color = rgba(0, 0, 0, 0.4)
overlay-border = 1px solid #232323

body
  background url('/images/background.png') 
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

/// header

#header
  height 190px
  background overlay-color
  padding-top 20px
  //box-shadow 0 10px 10px rgba(0, 0, 0, 0.3)
  border-bottom overlay-border

#navigator
  margin-bottom 20px

#navigator li
  display inline
  margin-right 20px
  font-weight bold

#navigator a
  color #ccc
  text-decoration none
  background none

#navigator a:hover
  color #eee

.current-page
  background rgba(0, 100, 200, 0.7) !important
  padding 5px 15px
  border-radius 5px

#title
  width container-width
  margin 0 auto

#title a
  color #ddd

#title a:hover
  color #eee
  text-decoration none

#title h1
  font-size 60px
  line-height 70px
  margin-bottom 0

#title h2
  font-size 16px
  line-height 16px
  color #aaa
  text-indent 5px
  
/// main container

.container
  margin-top -80px
  padding-bottom 60px
  width container-width


/// entry

#entry-list
  //padding 10px
  //border-radius 10px
  clear both
  //box-shadow 0 20px 40px rgba(0, 0, 0, 0.3)
  //background #fff
  //border 2px solid #333

.entry
  background-color #fff
  padding 20px
  border-bottom 1px solid #eee
  border-radius 10px
  margin-bottom 50px
  box-shadow 0 10px 15px rgba(0, 0, 0, 0.3)

.entry-header
  padding-bottom 10px

.entry-title a
  color #333

.entry-meta
  font-size 90%

/// footer

#footer
  height 250px
  background-color overlay-color
  border-top overlay-border

/// color bars

bar-width = 30px
bar-base-offset = 250px

.colorbar
  position absolute
  display block
  width bar-width
  left 50%
  top -1px
  border 1px solid #333
  border-radius 0 0 3px 3px

#bar1
  height 50px
  margin-left bar-base-offset
  background-color rgba(255, 50, 0, 0.7)

#bar2
  height 65px
  margin-left bar-base-offset + bar-width + 1
  background-color rgba(255, 255, 0, 0.7)

#bar3
  height 75px
  margin-left bar-base-offset + (bar-width + 1) * 2
  background-color rgba(0, 200, 255, 0.7)

#bar4
  height 60px
  margin-left bar-base-offset + (bar-width + 1) * 3
  background-color rgba(0, 255, 100, 0.7)
